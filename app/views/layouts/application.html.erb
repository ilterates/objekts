<!DOCTYPE html>
<html>
<head>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <title>SpaceGame</title>
</head>
<body>
  <nav class="mynav">
    <div>
      <% if !current_user %>
        <a><%= link_to "Sign In", new_session_path %></a>
        <a><%= link_to "Sign Up", new_user_path %></a>
      <% else %>
        <div class="menu">
          <a><%= link_to "Play", root_path %></a> &nbsp;
          <a><%= link_to "Top Scores", scores_path, { class: "top-scores-nav" } %></a>
          <a><%= link_to "Profile", user_path(current_user), { class: "top-scores-profile" } %></a> &nbsp;
          <a><%= link_to "Logout", logout_path(current_user) %></a>
        </div>
          <div class="<%= @score_show ? 'score' : 'hidden-score' %>"><p id="score">0000</p></div>
      <% end %>
    </div>
  </nav>
  <div class="flash">
    <% flash.each do |name, msg| %>
      <p>
        <small class="alert alert-info"> <%= name.capitalize %>: <%= msg %> </small>
      </p>
    <% end %>
  </div>




<%= yield %>


<%= Gon::Base.render_data %>
<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
<%= csrf_meta_tags %>

</body>
</html>

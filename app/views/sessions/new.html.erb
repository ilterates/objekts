<div class="signup-form">

  <%= form_for @user, url: "/sessions", method: "post" do |f| %>
    <div>
      <%= f.text_field :username, placeholder: "Username" %>
    </div>
    <br>
    <div>
      <%= f.password_field :password, placeholder: "Password" %>
    </div>
    <br>
    <%= f.submit "Sign In", class:"btn btn-primary" %> <small class="small">Or you can <%= link_to "Sign Up", new_user_path %> </small>
  <% end %>

  <div class="welcome-sphere" id="welcome-sphere">

  </div>
</div>

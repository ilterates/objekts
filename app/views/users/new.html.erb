
<div class="signup-form">
  <%= form_for @user do |f| %>
    <div>
      <%= f.text_field :username, placeholder: "Username" %>
    </div>
    <br>
    <div>
      <%= f.password_field :password, placeholder: "Password" %>
    </div>
    <br>
    <%= f.submit "Sign Up", class:"btn btn-primary" %>
  <% end %>
  <div class="welcome-sphere" id="welcome-sphere">

  </div>
</div>
